# EditorConfig is awesome: https://editorconfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Rust and Python
[*.{py,rs}]
charset = utf-8
indent_style = space
indent_size = 4

# YAML
[*.yml]
indent_style = space
indent_size = 2
